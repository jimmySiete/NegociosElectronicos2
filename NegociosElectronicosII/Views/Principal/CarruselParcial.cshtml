@model IEnumerable<NegociosElectronicosII.Models.NE_Carrusel>


@Styles.Render("~/Content/CarouselCSS")
@Scripts.Render("~/bundles/CarouselJS")
@Scripts.Render("~/bundles/CustomJs")


<div class="card">
    <div class="card-body">
        <div class="row row-sm">
            @*<aside class="col-md-3">
                <h5 class="text-uppercase">Marcas</h5>
                <ul class="menu-category">
                    @foreach (var item in (List<NegociosElectronicosII.Models.NE_Marca>)ViewBag.Marcas)
                    {
